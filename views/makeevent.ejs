<%- include('partials/header4') %>
<div class="" style="height: 55px;"></div>
<div class="container mt-5">
 

  <div class="row">
    <div class="col-sm-8">
      <div class="card y6 y61">
        <div class="card-body"  style="width: 100%;">

       
          <form action="/makeevent" method="POST" id="my_form">
            <div class="form-group">
              <%  if(typeof err != 'undefined' && err.length >0){  %>
               
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                  <strong>Error, </strong> <%= err %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

               
                
                
                        <%    } %> 
              <h1 class="">  Enter Event Details  </h1>
              <label for="name">Event Name</label>
              <input required type="text"  class="form-control" name="name" >
            </div>
            <div class="form-group">
              <label for="from">From</label>
            <input class="form-control e departure"   onkeydown="return false"  onfocus="blur()"  placeholder="event starting date" name="from"  required autocomplete="off" >
              
              
            </div>

            <div class="form-group">
                <label for="to">To</label>
                <input class="form-control e departure"   onkeydown="return false"  onfocus="blur()"    id="departures"   placeholder="event ending date" name="to"  required autocomplete="off" >
                
                
              </div>

              <div class="form-group">
                <label for="password">Abstract Submission Deadline</label>
                <input class="form-control e departure"   onkeydown="return false"  onfocus="blur()"  placeholder="last date for abstract submission" name="abslast"  required autocomplete="off" >
                
                
              </div>

              <div class="form-group">
                <label for="password">Full Paper Submission Deadline</label>
                <input class="form-control e departure"   onkeydown="return false"  onfocus="blur()"  placeholder="last date for full paper submission" name="fplast" placeholder="last date for full paper submission"  required autocomplete="off" >
                
                
              </div>

              <div class="form-group">
                <label for="password">Event Registration Deadline</label>
                <input class="form-control e departure"   onkeydown="return false"  onfocus="blur()"   placeholder="last date for event Registration" name="eventdeadline" placeholder="last date for event registeration"  required autocomplete="off" >
                
                
              </div>
              

              <div class="form-group">
                <label for="mode">Mode</label>
              <input required type="text" class="form-control" name="mode" placeholder="eg:- online/offline">
                
                
              </div>


            <button type="submit" class="btn btn-primary y61 " style="margin-top:5px;background-color: #059862;color: white;border:none; outline: none;">Add</button>
          </form>
         
        </div>
      </div>
    </div>

   
     
    </div>
    



  </div>


<%- include('partials/footer') %>

<script>
  var $myForm = $("#my_form");
$myForm.submit(function(){
    $myForm.submit(function(){
        return false;
    });
});

  $(".departure").datepicker({  
  showAnim: "slideDown",
   changeYear: true,
   numberOfMonths: 1,
  dateFormat: "dd-mm-yy",
  minDate: +1,
  maxDate: "24M + 10D",
  onClose: function(selectedDate){
      $("#return").datepicker("option", "minDate", selectedDate)
  },
   showWeek: true,
});



